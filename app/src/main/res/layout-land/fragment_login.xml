<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginActivity$PlaceholderFragment"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="475dp"
        android:id="@+id/frame_login"
        android:elevation="8dp"
        android:background="@color/foreground"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_username"
            android:hint="@string/hint_username"
            android:textColor="@color/text"
            android:textColorHint="@color/text_hint"
            android:layout_above="@+id/edit_password"
            android:layout_alignLeft="@+id/edit_password"
            android:layout_alignStart="@+id/edit_password"
            android:singleLine="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:id="@+id/edit_password"
            android:hint="@string/hint_password"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/app_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/instagram_blend" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/footer">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="@string/link_register"
                android:id="@+id/button_register"
                android:background="@color/solid"
                android:textColor="@color/text_solid"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="0.5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:id="@+id/button_login"
                android:background="@color/solid"
                android:textColor="@color/text_solid"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0.5dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/foreground"
            android:id="@+id/loading_frame"
            android:elevation="8dp"
            android:layout_marginLeft="128dp"
            android:layout_marginRight="128dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/loading_text"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:id="@+id/loading_bar"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:indeterminate="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
